{
  "rules": {
    ".read": false,
    ".write": false,
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "drivers": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "jobs": {
      ".read": "auth != null",
      "$jobId": {
        ".write": "auth != null",
        "driverId": {
          ".write": "auth != null"
        }
      }
    },
    "presence": {
      ".read": "auth != null",
      ".write": "auth != null"
    }
  }
}